<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		tools:context="com.kurox.messrelay2.Settings" android:weightSum="1">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="0.02">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="接收邮箱地址"
				android:textSize="22dp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="textEmailAddress"
				android:ems="10"
				android:id="@+id/mailTo" android:layout_weight="1" android:hint="example@126.com"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
	              android:layout_height="wrap_content" android:layout_weight="0.02"
	              android:layout_gravity="center_horizontal">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMTP服务器"
		          android:id="@+id/textView" android:textSize="22dp"/>
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:inputType="textEmailAddress" android:ems="10" android:id="@+id/mailSMTP"
		          android:layout_weight="1" android:hint="smtp.126.com"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
	              android:layout_height="wrap_content" android:layout_weight="0.02"
	              android:layout_gravity="center_horizontal">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="发送邮箱地址"
		          android:id="@+id/textView2" android:textSize="22dp"/>
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:inputType="textEmailAddress" android:ems="10" android:id="@+id/mailForm"
		          android:layout_weight="1" android:hint="name@126.com"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
	              android:layout_height="wrap_content" android:layout_weight="0.02"
	>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="邮箱用户名"
		          android:id="@+id/textView4" android:textSize="22dp"/>
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="10"
		          android:id="@+id/mailUser" android:layout_weight="1"
		          android:password="false" android:inputType="text" android:hint="name"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
	              android:layout_height="wrap_content" android:layout_weight="0.02"
	              android:layout_gravity="center_horizontal">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="邮箱密码"
		          android:id="@+id/textView3" android:textSize="22dp"/>
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:ems="10" android:id="@+id/mailPass"
		          android:layout_weight="1" android:inputType="textPassword" android:hint="password"/>
	</LinearLayout>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="确定"
			android:id="@+id/button" android:layout_gravity="center_horizontal" android:layout_weight="0.02"
			android:onClick="set"/>
</LinearLayout>
